<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp"
    app:layout_insetEdge="none"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:height="150dp"
        android:contentDescription="@string/screen_discription"
        android:elegantTextHeight="true"
        android:gravity="center_vertical"
        android:text="@string/display_screen"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/group00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/group0"
        tools:layout_editor_absoluteX="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnM_C"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/mc"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnM_Plus"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/m"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnM_Minus"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/m_Minus"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnM_R"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/mr"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/group0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/group1"
        tools:layout_editor_absoluteX="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnClr"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btnClr"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDiv"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btnDiv"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMul"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btnMul"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDel"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btnDel"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout

        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/group2"
        tools:layout_editor_absoluteX="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btn7"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btn8"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn9"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btn9"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMinus"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btnMinus"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/group3"
        tools:layout_editor_absoluteX="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btn4"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btn5"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btn6"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPlus"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btnPlus"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/group3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/group4"
        tools:layout_editor_absoluteX="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btn1"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btn2"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btn3"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCalc"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btnCalc"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/group4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPercent"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btnPercent"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn0"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btn0"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPoint"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btnPoint"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAns"
            style="@style/button_style"
            android:background="@drawable/button_background"
            android:text="@string/btnAns"
            android:textColor="@color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
